<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:background="@color/blue2"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Donation"
                android:id="@+id/tv_login"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue1"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Charity Name :"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="10dp">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_conDon_chari_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Asarana Sarana Foundation"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">
                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Donation (LKR) :"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="10dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_conDon_chari_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5000.00"
                        android:textSize="16dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">
                    </TextView>



                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:textColor="@color/blue1"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:textSize="12sp">
            </TextView>

            <TextView
                android:id="@+id/tv_conDon_cNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234 1234 1234 1234"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:textSize="16dp">
            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardholder Name"
                android:textColor="@color/blue1"
                android:paddingTop="10dp"
                android:textSize="12sp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/TV_conDon_cName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Janith Chathuranga Withanagamage"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:textSize="16dp"
                >
            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_pay_confirm"
                    android:text="Confirm"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue3">

                </Button>

                <Button
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_pay_cancel"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue1">

                </Button>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>