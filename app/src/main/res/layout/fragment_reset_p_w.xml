<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPW">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3"
        app:layout_constraintVertical_bias="0.0"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Current Password"
                android:textColor="@color/blue1"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/edtText_reset_currpw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="New Password"
                android:textColor="@color/blue1"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/edtText_reset_newpw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="Confirm New Password"
                android:textColor="@color/blue1"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/edtText_reset_confirmnewpw"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_savePW"
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue3"
                    android:text="Save New Password"
                    android:textSize="12sp">

                </Button>

                <Button
                    android:id="@+id/btn_resetPWCanc"
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:backgroundTint="@color/blue2"
                    android:textColor="@color/black"
                    android:onClick="loginInter"
                    android:text="Cancel"
                    android:textSize="12sp">

                </Button>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>