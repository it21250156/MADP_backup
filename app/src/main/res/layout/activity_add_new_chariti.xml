<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_new_chariti">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="60dp"
            android:text="Add a New Charity"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="italic">

        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="597dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Name"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtText_admin_CharName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/customer_edittext"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:textColor="@color/blue1"
            android:textColorHighlight="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Category"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <Spinner
            android:id="@+id/spnr_chat_cate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Address"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtText_admin_char_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/customer_edittext"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/blue1"
            android:textColorHighlight="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Contact Number"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtText_admin_char_contact"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/customer_edittext"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/blue1"
            android:textColorHighlight="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Email"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtText_admin_char_email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/customer_edittext"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/blue1"
            android:textColorHighlight="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Description"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtText_admin_char_description"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/customer_edittext"
            android:drawablePadding="8dp"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="@color/blue1"
            android:textColorHighlight="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Upload Image"
            android:textColor="@color/blue1"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/iv_admin_char_img"
            android:layout_width="70dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/etcharityDescription"
            app:srcCompat="@drawable/baseline_image_24" />


        <Button
            android:id="@+id/btn_btn_admin_add_char"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/blue3"
            android:text="Add Charity"
            android:textSize="14sp"
            android:onClick="backToCharities">

        </Button>

        <Button
            android:id="@+id/btn_btn_admin_post_cancel"
            android:layout_width="@dimen/btnWidth"
            android:layout_height="@dimen/btnHeight"
            android:layout_gravity="center"
            android:backgroundTint="@color/blue2"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:onClick="backToCharities">

        </Button>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>