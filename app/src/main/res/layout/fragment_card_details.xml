<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity"
    android:background="@color/blue2"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Card Details"
                android:id="@+id/tv_login"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/blue3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Card Number"
                android:textColor="@color/blue1"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_card_cNo"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="number"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiry Date"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/edtText_card_exp"
                android:layout_width="119dp"
                android:layout_height="35dp"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:inputType="date"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CVV"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/edtText_card_cvv"
                android:layout_width="119dp"
                android:layout_height="35dp"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cardholder Name"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:paddingTop="16dp"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/edtText_signup_password"
                android:background="@drawable/customer_edittext"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/blue1"
                android:textColorHighlight="@color/black"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_addCard"
                    android:text="Confirm"
                    android:textSize="14sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/blue3">

                </Button>

                <Button
                    android:layout_width="@dimen/btnWidth"
                    android:layout_height="@dimen/btnHeight"
                    android:id="@+id/btn_cancleCard"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:backgroundTint="@color/blue1">
                </Button>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>